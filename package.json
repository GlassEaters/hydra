{
  "name": "@glass-eaters/hydra",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "description": "Hydra",
  "license": "MIT",
  "author": "Hydra GlassEaters",
  "devDependencies": {
    "@metaplex-foundation/amman": "^0.0.9",
    "@metaplex-foundation/solita": "0.0.2",
    "@project-serum/anchor": "^0.20.1",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^8.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^6.2.1",
    "mocha": "^8.1.0",
    "prettier": "2.5.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "amman:start": "DEBUG=\"*\" amman validator .ammanrc.cjs",
    "amman:stop": "pkill solana-test-validator",
    "api:gen": "node scripts/api-gen-ts.cjs && prettier --write ./packages/**/*.ts",
    "watch": "npx lerna run --parallel watch",
    "build": "npx lerna run build",
    "test": "ts-mocha -p ./tsconfig.json -t 1000000 \"tests/**/*.ts\""
  },
  "private": true,
  "packageManager": "yarn@3.2.0-rc.12",
  "resolutions": {
    "@metaplex-foundation/beet": "portal:../beet/beet"
  }
}
