{
  "name": "@glasseaters/hydra",
  "version": "1.0.2",
  "workspaces": [
    "packages/*"
  ],
  "description": "Hydra",
  "license": "MIT",
  "author": "Hydra GlassEaters",
  "devDependencies": {
    "@metaplex-foundation/amman": "^0.1.0",
    "@metaplex-foundation/solita": "0.2.0",
    "@project-serum/anchor": "^0.23.0",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.22",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "mocha": "9.2.2",
    "prettier": "2.6.2",
    "ts-mocha": "9.0.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "amman:start": "amman validator .ammanrc.cjs",
    "amman:stop": "pkill solana-test-validator",
    "api:gen": "node scripts/api-gen-ts.cjs && prettier --write ./packages/**/*.ts",
    "watch": "npx lerna run --parallel watch",
    "build": "npx lerna run build",
    "mega-test": "yarn run api:gen && yarn run build && yarn run amman:start && yarn test",
    "test": "ts-mocha -p ./tsconfig.json -t 1000000 \"tests/**/*.ts\"",
    "prepare": "husky install"
  },
  "private": true,
  "packageManager": "yarn@3.2.0-rc.12",
  "dependencies": {
    "@strata-foundation/spl-utils": "^3.4.5",
    "bs58": "^5.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
